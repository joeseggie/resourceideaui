@page
@model ResourceIdea.Pages.Engagements.AddEngagementModel
@{
    ViewData["Title"] = "Add Engagement";
}

<p>
    <a asp-page="/engagements/index"
       asp-route-client="@Model.Client"
       class="btn btn-outline-primary">
        <i class="fa-solid fa-angles-left"></i> Back
    </a>
</p>

<div class="row">
    <div class="col-9">
        <form method="post">
            <input type="hidden" asp-for="ClientId" value="@Model.Client" />
            <div class="card bg-light">
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input type="text" class="form-control" asp-for="Name">
                    </div>
                    <div class="mb-0 row">
                        <div class="col-12">
                            <input type="submit" class="btn btn-danger" value="Save Changes">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
