@page "{id}"
@model ResourceIdea.Pages.Clients.ClientDetailsModel

@{
    ViewData["Title"] = "Client Details";
}

@if (Model.Client is not null)
{
    <h3>Client: @Model.Client.Name</h3>
    <div class="card">
        <div class="card-body">
            <p>Address: @Model.Client.Address</p>
            <p>Industry: @Model.Client.Industry</p>
        </div>
    </div>
}
else
{
    <div class="alert alert-primary d-flex align-items-center" role="alert">
      <div>
        Client was not found. Go back to the <a asp-page="./index" class="alert-link">clients list</a>.
      </div>
    </div>
}
