@page "{id}"
@model ResourceIdea.Pages.Clients.ClientDetailsModel

@{
    ViewData["Title"] = "Client Details";
}

<p>
    <a asp-page="./index" class="btn btn-outline-primary"><i class="fa-solid fa-angles-left"></i> Clients List</a>
</p>
@if (Model.Client is not null)
{
    <div class="card">
        <div class="card-body">
            <div class="mb-3 row">
                <label asp-for="Client!.Name" class="col-sm-1 col-form-label col-form-label-lg"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control form-control-lg" asp-for="Client!.Name">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Client!.Address" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Client!.Address">
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Client!.Industry" class="col-sm-1 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="Client!.Industry">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="offset-1 col-sm-10">
                    <input type="submit" class="btn btn-danger" value="Save Changes">
                </div>
            </div>
        </div>
    </div>
    <br/>
    <nav class="nav nav-pills flex-column flex-sm-row">
        <a class="flex-sm-fill text-sm-center nav-link active" href="#">Engagements</a>
        <a class="flex-sm-fill text-sm-center nav-link" href="#">Tasks</a>
        <a class="flex-sm-fill text-sm-center nav-link" href="#">Assignments</a>
        <a class="flex-sm-fill text-sm-center nav-link" href="#">Resources</a>
    </nav>
    <div class="card">
        <div class="card-body"></div>
    </div>
}
else
{
    <div class="alert alert-primary d-flex align-items-center" role="alert">
        <div>
            Client was not found. Go back to the <a asp-page="./index" class="alert-link">clients list</a>.
        </div>
    </div>
}